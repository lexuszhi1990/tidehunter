<div class="">
  <%= render 'shared/content_lead', header: "Register" %>
  <%= form_tag '/register', class: "normal-form" do  %>
    <div class="control-group">
      <%= label_tag :username %>
      <%= text_field_tag :username %>
    </div>
    <div class="control-group">
      <%= label_tag :email %>
      <%= email_field_tag :email %>
    </div>
    <div class="control-group">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
  <%= submit_tag "Register", class: "btn btn-success" %>
  <% end %>
</div>


