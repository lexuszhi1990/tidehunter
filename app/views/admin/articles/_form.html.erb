<div class="lab_article">
  <%= form_for(@article) do |f| %>
    <%= render 'shared/errors', obj: @article %>
    <div class="field">
      <%= f.label :Title %>
      <%= f.text_field :name, class: "mainname" %>
    </div>
    <div class="field">
      <%= f.label :Text %>
      <%= f.text_area :body, class: "mainarea" %>
    </div>
    <div class="actions">
      <%= f.submit class: "btn btn-success" %>
    </div>
  <% end %>
</div>

<div id="text-preview">
  
</div>
